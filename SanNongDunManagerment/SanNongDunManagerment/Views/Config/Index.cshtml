@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="form-group">
        <label class="col-sm-5 control-label">新增业绩：</label>
        <div class="col-sm-8">
            <input type="text" id="inputZfc" class="form-control" placeholder="请输入要设置价格-以美元为单位" value="@ViewBag.ZfcPrice">

        </div>
       
    </div>

    <div class="col-sm-4 col-sm-offset-2">
        <button id="btn_save" class="btn btn-primary" type="button">保存修改</button>
    </div>
</div>

<div class="col-md-12">
    <div class="form-group">
        <label class="col-sm-5 control-label">修改管理员密码：</label>
        <div class="col-sm-8">
            <input type="text" id="pwd" class="form-control" placeholder="请输入密码" value="">

        </div>

    </div>

    <div class="col-sm-4 col-sm-offset-2">
        <button id="btn_pwd" class="btn btn-primary" type="button">保存修改</button>
    </div>
</div>

<script type="text/javascript">

    $(function () {

        $("#btn_save").click(function () {

           

            $.post(gpath.management_path + "config/updateZfcprice", { price: $("#inputZfc").val() }, function (data) {

                if (data == true) {
                    alert("设置成功");
                    location.reload();
                } else {
                    alert(data.msg);
                }

            });




        });

        $("#btn_pwd").click(function () {



            $.post(gpath.management_path + "config/updateAdminPwd", { pwd: $("#pwd").val() }, function (data) {

                if (data == true) {
                    alert("设置成功");
                    location.reload();
                } else {
                    alert(data.msg);
                }

            });




        });


    });

</script>