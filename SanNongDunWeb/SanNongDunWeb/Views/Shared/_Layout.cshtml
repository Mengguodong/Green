@using Common;
@{
    bool isShowHeader = ViewBag.ShowHeader ?? true;
    bool isShowFooter = ViewBag.ShowFooter ?? false;
    string headerTitle = ViewBag.HeaderTitle ?? "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>@ViewBag.HeaderTitle</title>


   
    <link rel="stylesheet" type="text/css" href=@Auxiliary.GetStaticUrl("Show/css/mui.min.css") />
    <link rel="stylesheet" type="text/css" href=@Auxiliary.GetStaticUrl("Show/css/common.css") />
    <link rel="stylesheet" type="text/css" href=@Auxiliary.GetStaticUrl("Show/css/account.css") />
    <link rel="stylesheet" type="text/css" href=@Auxiliary.GetStaticUrl("Show/css/validate.css") />
    <link rel="stylesheet" type="text/css" href=@Auxiliary.GetStaticUrl("Show/css/exchange.css") />

    <script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Show/js/mui.js")></script>
    <script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Show/js/zepto.min.js")></script>
    <script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Show/js/jquery-1.8.3.js")></script>
    <script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Show/js/config.js")></script>
    <script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Show/js/jquery.validate.js")></script>
    <script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Show/js/common.js")></script>
    <script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Management/js/plugins/layer_mobile/layer.js")></script>
    @*<script type="text/javascript" charset="utf-8" src=@Auxiliary.GetStaticUrl("Management/js/plugins/layer/layer.min.js")></script>*@
    @RenderSection("styles", required: false)@*样式渲染位置*@
    <script type="text/javascript" charset="utf-8">
        mui.init();
    </script>
</head>
@{
    //Common.Web.LoginUserInfo user = (Common.Web.LoginUserInfo)ViewData["_CurrentUser"];
}
<body>
    <header id="header" class="mui-bar mui-bar-nav">
        <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left" style="color: #fff; "></a>
        <h1 class="mui-title">@ViewBag.HeaderTitle</h1>
        @*<h1 class="mui-title"><span>@(user.RealName)</span>（@user.LevelName）</h1>*@
        <a style="font-size: 16px; padding-top: 13px; padding-right: 10px; color: #fff; " class="mui-pull-right" href="@PubConstant.WineGameShowUrl("home","loginout")">退出</a>
    </header>
    <section style="margin-top:44px;">
        @if (isShowHeader)
        {
            @Html.Partial("_Header");
        }
        @RenderBody()
    </section>
    @RenderSection("scripts", required: false)
    @if (isShowFooter)
    {
        @Html.Partial("_Footer");
    }

</body>
</html>

